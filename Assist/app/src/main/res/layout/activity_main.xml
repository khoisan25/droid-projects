<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Customer Needs, Comes here!"
                android:id="@+id/customer"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/output" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/output"
                android:hint="Enter Text to Say"
                android:layout_above="@+id/say"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.33" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Say"
                android:id="@+id/say"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_welcome"
                android:layout_weight="0.21"
                android:background="@drawable/welcome" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_wduneed"
                android:layout_weight="0.21"
                android:background="@drawable/whatdoyouneed" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_idhave"
                android:layout_weight="0.21"
                android:background="@drawable/donthave" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_bosmall"
                android:layout_weight="0.21"
                android:background="@drawable/bigorsmall" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_network"
                android:background="@drawable/network"
                android:layout_weight="0.16" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_nchange"
                android:layout_weight="0.16"
                android:background="@drawable/nochage" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="102dp"
                android:id="@+id/btn_fhmuch"
                android:layout_weight="0.16"
                android:background="@drawable/forhowmuch" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_listen"
                android:layout_weight="0.16"
                android:background="@drawable/listen" />
        </TableRow>

    </LinearLayout>

</RelativeLayout>
